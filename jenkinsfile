pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-west-1'
        TERRAFORM_DIR      = 'terraform'
        LAMBDA_DIR         = 'lambda/nodejs'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git'
            }
        }

        stage('Install Node Modules') {
            steps {
                dir("${LAMBDA_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Zip Lambda') {
            steps {
                dir("${LAMBDA_DIR}") {
                    sh 'zip -r ../../lambda.zip .'
                }
            }
        }

        stage('Terraform Init & Apply') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'aws-creds',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    dir("${TERRAFORM_DIR}") {
                        sh 'terraform init'
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }

        stage('Upload Lambda ZIP to S3 (After Apply)') {
            steps {
                script {
                    withCredentials([usernamePassword(
                        credentialsId: 'aws-creds',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )]) {

                        // bucket created AFTER terraform apply
                        def bucket = sh(
                            script: "terraform -chdir=${TERRAFORM_DIR} output -raw s3_bucket",
                            returnStdout: true
                        ).trim()

                        echo "Uploading lambda.zip to S3 bucket: ${bucket}"

                        sh "aws s3 cp lambda.zip s3://${bucket}/lambda.zip"
                    }
                }
            }
        }

        stage('Test API') {
            steps {
                script {
                    def apiUrl = sh(
                        script: "terraform -chdir=${TERRAFORM_DIR} output -raw api_url",
                        returnStdout: true
                    ).trim()

                    echo "GET request..."
                    sh "curl -X GET '${apiUrl}?id=test123' || true"

                    echo "POST request..."
                    sh "curl -X POST '${apiUrl}' -H 'Content-Type: application/json' -d '{\"id\":\"test123\",\"info\":\"Hello\"}'"

                    echo "PUT request..."
                    sh "curl -X PUT '${apiUrl}' -H 'Content-Type: application/json' -d '{\"id\":\"test123\",\"info\":\"Updated\"}'"

                    echo "DELETE request..."
                    sh "curl -X DELETE '${apiUrl}' -H 'Content-Type: application/json' -d '{\"id\":\"test123\"}'"
                }
            }
        }
    }

    post {
        success {
            echo "Deployment Successful! Lambda + API Gateway are Live."
        }
        failure {
            echo "Deployment Failed! Check Pipeline Logs."
        }
    }
}





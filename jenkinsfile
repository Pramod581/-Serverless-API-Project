pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-west-1"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Terraform Init & Apply (Create S3)') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('ZIP Lambda Code') {
            steps {
                dir('lambda') {
                    sh 'zip -r ../lambda.zip .'
                }
                sh 'ls -l ../lambda.zip'
            }
        }

        stage('Upload Lambda ZIP to S3') {
            steps {
                // Get the bucket name from Terraform output
                script {
                    def bucket = sh(script: "terraform -chdir=terraform output -raw lambda_s3_bucket", returnStdout: true).trim()
                    sh "aws s3 cp ../lambda.zip s3://${bucket}/lambda.zip --acl private"
                }
            }
        }

        stage('Terraform Apply Lambda') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed!"
        }
        success {
            echo "Pipeline executed successfully!"
        }
    }
}












pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-west-1'
        LAMBDA_S3_BUCKET   = ''
        LAMBDA_S3_KEY      = 'lambda/latest.zip'
        TERRAFORM_DIR      = 'terraform'
        LAMBDA_DIR         = 'lambda/nodejs'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git'
            }
        }

        stage('Install Node Modules') {
            steps {
                dir("${LAMBDA_DIR}") {
                    sh 'npm install'
                }
            }
        }

        stage('Zip Lambda') {
            steps {
                dir("${LAMBDA_DIR}") {
                    sh 'zip -r ../../lambda.zip .'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir("${TERRAFORM_DIR}") {
                    sh 'terraform init'
                }
            }
        }

        stage('Upload Lambda to S3') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'aws-creds',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    script {
                        if (env.LAMBDA_S3_BUCKET == '') {
                            env.LAMBDA_S3_BUCKET = sh(
                                script: "terraform -chdir=${TERRAFORM_DIR} output -raw s3_bucket",
                                returnStdout: true
                            ).trim()
                        }

                        sh "aws s3 cp lambda.zip s3://${env.LAMBDA_S3_BUCKET}/${env.LAMBDA_S3_KEY}"
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'aws-creds',
                    usernameVariable: 'AWS_ACCESS_KEY_ID',
                    passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                )]) {
                    dir("${TERRAFORM_DIR}") {
                        sh 'terraform apply -auto-approve'
                    }
                }
            }
        }

        stage('Test API') {
            steps {
                script {
                    def apiUrl = sh(
                        script: "terraform -chdir=${TERRAFORM_DIR} output -raw api_url",
                        returnStdout: true
                    ).trim()

                    sh "curl -X GET '${apiUrl}?id=test123' || true"
                }
            }
        }
    }

    post {
        success { echo "Deployment Successful!" }
        failure { echo "Deployment Failed!" }
    }
}


pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-east-1"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('ZIP Lambda Code') {
            steps {
                dir("lambda") {
                    sh "zip -r ../lambda.zip ."
                }

                sh "ls -l"
            }
        }

        stage('Upload Lambda ZIP to S3') {
            steps {
                withAWS(credentials: 'aws-creds', region: "${AWS_DEFAULT_REGION}") {
                    // Bucket name comes from terraform variable (in variables.tf)
                    sh """
                    aws s3 cp lambda.zip s3://${S3_BUCKET}/lambda.zip --acl private
                    """
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh "terraform init"
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh "terraform plan -out=tfplan"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh "terraform apply -auto-approve tfplan"
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed!"
        }
        success {
            echo "Pipeline executed successfully!"
        }
    }
}









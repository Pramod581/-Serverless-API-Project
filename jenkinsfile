pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-west-1"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Terraform Init & Apply (Create S3 Bucket)') {
            steps {
                dir('terraform') {
                    sh "terraform init"
                    sh "terraform apply -auto-approve"
                }

                script {
                    env.S3_BUCKET = sh(
                        script: "cd terraform && terraform output -raw lambda_bucket_name",
                        returnStdout: true
                    ).trim()

                    echo "S3 bucket created by Terraform: ${env.S3_BUCKET}"
                }
            }
        }

        stage('ZIP Lambda Code') {
            steps {
                dir("lambda") {
                    sh "zip -r ../lambda.zip ."
                }
                sh "ls -lh"
            }
        }

        stage('Upload Lambda ZIP to S3') {
            steps {
                withAWS(credentials: 'aws-creds', region: "${AWS_DEFAULT_REGION}") {
                    sh """
                    aws s3 cp lambda.zip s3://${S3_BUCKET}/lambda.zip --acl private
                    """
                }
            }
        }

        stage('Terraform Apply (Deploy Lambda)') {
            steps {
                dir('terraform') {
                    sh "terraform apply -auto-approve"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}










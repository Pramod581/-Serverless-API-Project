pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-west-1"
        TF_DIR = "terraform"
        LAMBDA_DIR = "lambda/nodejs"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Install Node Packages for Lambda') {
            steps {
                dir(LAMBDA_DIR) {
                    sh 'npm install'
                }
            }
        }

        stage('Zip Lambda Code') {
            steps {
                dir(LAMBDA_DIR) {
                    sh 'zip -r lambda.zip .'
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir(TF_DIR) {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir(TF_DIR) {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir(TF_DIR) {
                    sh 'terraform apply -auto-approve'
                }
            }
        }
    }
}









pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = "us-west-1" // Correct region
        S3_BUCKET = "your-lambda-bucket-name" // Replace with your actual S3 bucket
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Pramod581/-Serverless-API-Project.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Terraform Init & Apply (Create S3 Bucket)') {
            steps {
                dir('terraform') {
                    // Quote paths to avoid issues with spaces
                    sh '''
                    terraform init
                    terraform apply -auto-approve
                    '''
                }
            }
        }

        stage('ZIP Lambda Code') {
            steps {
                dir('lambda') {
                    sh 'zip -r ../lambda.zip .'
                }
                sh 'ls -l ../lambda.zip'
            }
        }

        stage('Upload Lambda ZIP to S3') {
            steps {
                withAWS(credentials: 'aws-creds', region: "${AWS_DEFAULT_REGION}") {
                    sh 'aws s3 cp ../lambda.zip s3://${S3_BUCKET}/lambda.zip --acl private'
                }
            }
        }

        stage('Terraform Plan & Apply (Deploy Lambda)') {
            steps {
                dir('terraform') {
                    sh '''
                    terraform plan -out=tfplan
                    terraform apply -auto-approve tfplan
                    '''
                }
            }
        }
    }

    post {
        failure {
            echo "Pipeline failed!"
        }
        success {
            echo "Pipeline executed successfully!"
        }
    }
}










